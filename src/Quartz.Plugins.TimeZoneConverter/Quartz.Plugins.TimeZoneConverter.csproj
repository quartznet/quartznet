<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net462;net472;netstandard2.0</TargetFrameworks>
    <RootNamespace>Quartz</RootNamespace>
    <Title>Quartz.NET TimeZoneConverter integration</Title>
    <Description>Quartz.NET TimeZoneConverter integration https://github.com/mj1856/TimeZoneConverter; $(Description)</Description>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <Authors>Sean Farrow, Quartz.NET</Authors>
    <PackageReadmeFile>timezoneconverter-integration.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="../../docs/documentation/quartz-3.x/packages/timezoneconverter-integration.md" Pack="true" PackagePath="\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="TimeZoneConverter" Version="6.1.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Quartz.Plugins\Quartz.Plugins.csproj" />
  </ItemGroup>
</Project>